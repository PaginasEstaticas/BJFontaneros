---
 const { title, subtitle, description, button, link, image, alt } = Astro.props
---

<div class="wrapper bg-gray pb-5">
	<div class="container px-2 py-5">
		<h2 class="fw-bold section-title pb-5 pt-2 fs-1">{ title }</h2>
		<div class="row align-items-center">
			<div class="col-12 col-lg-6">
				<img 
					src={ image } 
					class="img-fluid" 
					alt={ alt }
					loading="lazy"
				>
			</div>
			<div class="col-12 col-lg-6">
				<div class="row align-items-center">
					<h3 class="fs-1 pt-3 pb-4 text-primary">{subtitle}</h3>
					<p>{description }</p>
					<a class="btn btn-primary mt-4" href={ link } role="button">{ button }</a>
				</div>
			</div>
		</div>
	</div>
</div>

<style lang="scss">
</style>