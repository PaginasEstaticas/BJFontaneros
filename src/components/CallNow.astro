---
import { buildUrl } from '../helpers/url';

const { title, button, link } = Astro.props;
const coverURL = buildUrl('/pattern_1080.webp');
---

<div class="flag-button parallax" style={"--background-image: url(" + coverURL + ");"}>
	<div class="container px-2 py-5">
		<h2 class="mb-4 text-light">{ title }</h2>
		<a class="btn btn-outline-secondary my-3 contact-btn" href={ link } role="button">{ button }</a>
	</div>
</div>

<style lang="scss">
	.flag-button {
		text-align: center;
	}
	.contact-btn {
		width: 80%;
		max-width: 360px;
	}
</style>