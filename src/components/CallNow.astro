---
const { title, button, link } = Astro.props;
---

<div class="flag-button parallax">
	<div class="container px-2 py-5">
		<h2 class="mb-4 text-light">{ title }</h2>
		<a class="btn btn-outline-secondary my-3 contact-btn" href={ link } role="button">{ button }</a>
	</div>
</div>

<style lang="scss">
	.flag-button {
		text-align: center;
	}
	.contact-btn {
		width: 80%;
		max-width: 360px;
	}
	.parallax {
		--background-image: url('/pattern_1080.webp')
	}
</style>