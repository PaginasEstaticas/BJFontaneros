---
 const { title, description, images } = Astro.props
---

<div class="wrapper bg-gray">
	<div class="container px-2">
		<div class="row">
			<h3 class="fs-1 pt-3 pb-3 text-primary">{ title }</h3>
			<p>{ description }</p>
		</div>
		<div class="row py-3 align-items-center">
			<div class="col-12 col-md-4">
				<div class="row">
					<div class="col-6 col-md-12 py-2">
						<img src={ images[0].src } alt={ images[0].alt } class="img-fluid"/>
					</div>
					<div class="col-6 col-md-12 py-2">
						<img src={ images[1].src } alt={ images[1].alt } class="img-fluid"/>
					</div>
				</div>
			</div>
			<div class="col-12 col-md-8">
				<img src={ images[2].src } alt={ images[2].alt } class="img-fluid p-image"/>
			</div>
		</div>
	</div>
</div>

<style lang="scss">
	.p-image {
		padding: .8rem !important;
	}
</style>