---
	const { title, text1, text2, text3, num1, num2 } = Astro.props
---

<div class="wrapper bg-gray pb-4">
<div class="container px-4 py-4">
	<div class="row">
		<h2 class="fw-bold section-title pb-4 pt-2">{ title }</h2>
		{ text1 && <p>{ text1 }</p> }
		{ text2 && <p>{ text2 }</p> }
		{ text3 && <p>{ text3 }</p> }
	</div>
	<div class="row">
		<div class="col-12 col-sm-6 p-2">
			<a href={ "tel:" + num1 } class="btn btn-primary w-100" aria-label={ num1 }>{ num1 }</a>
		</div>
		<div class="col-12 col-sm-6 p-2">
			<a href={ "tel:" + num2 } class="btn btn-primary w-100" aria-label={ num2 }>{ num2 }</a>
		</div>
	</div>
</div>
</div>

<style lang="scss">
	.section-title {
		font-size: 2.8rem !important;
	}
</style>