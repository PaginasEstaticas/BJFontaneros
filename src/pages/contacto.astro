---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import LoadScripts from "../components/LoadScripts.astro";
import Hero2 from "../components/Hero2.astro";
import ContactNumbers from "../components/ContactNumbers.astro";
import ContactCard from "../components/ContactCard.astro";

import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<Hero2 
				title="¡PÓNGASE EN CONTACTO CON NOSOTROS!"
				description="Disponemos de muchas formas de contacto"
			/>

			<ContactNumbers 
				title="NUESTROS NÚMEROS DE CONTACTO"
				text1="Valoramos la comunicación directa y eficiente. Por eso, tenemos disponible diversos números de contacto. Ya sea que tengas una consulta sencilla o una urgencia de fontanería, estamos aquí para ti. Ofrecemos un servicio de fontanería las 24 horas en Madrid, listos para atender tus necesidades de manera rápida y eficaz. ¡Tu tranquilidad es nuestra prioridad!"
				num1="+34 689 76 63 29"
				num2="+34 627 30 39 44"
			/>

			<div class="wrapper bg-gray pb-4">
				<div class="container px-4">
					<div class="row">
						<div class="col-12 col-lg-6">
							<ContactCard 
								title="ESTAMOS DISPONIBLES EN WHATSAPP"
								description="¡Ahora también estamos en WhatsApp! No dudes en contactarnos para cualquier consulta o asistencia que necesites."
								type="whatsapp"
								url="34689766329"
							/>
						</div>
						<div class="col-12 col-lg-6">
							<ContactCard 
								title="PREGÚNTENOS POR CORREO ELECTRÓNICO"
								description="¡Contáctanos por correo electrónico! Para cualquier consulta, asistencia o presupuesto que puedas necesitar en cualquier momento."
								type="email"
								url="contacto@bjfontaneros.com"
							/>
						</div>
					</div>
				</div>
			</div>

			<div class="wrapper bg-gray pb-4">
				<div class="container px-4 py-5">
					<div class="row">
						<h2 class="fw-semibold section-title pb-4 pt-4">DÓNDE ESTAMOS</h2>
						<iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d1171.576948288177!2d-3.669188295696539!3d40.3934665049216!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ses!2ses!4v1732111445642!5m2!1ses!2ses" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
					</div>
				</div>
			</div>

			<div class="bg-gray" style="padding: 1rem 0; margin: 0;"></div>

		</main>
		<Footer />
		<LoadScripts />
	</body>
</html>